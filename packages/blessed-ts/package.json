{
  "name": "blessed-ts",
  "version": "0.1.0",
  "description": "TypeScript implementation of terminal interface library with improved IME and multilingual support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --noEmitOnError false",
    "build:strict": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "terminal",
    "tui",
    "ime",
    "multilingual",
    "unicode",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "grapheme-splitter": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "blessed": "^0.1.81",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}