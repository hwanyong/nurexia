{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc: build - tsconfig.json"
        },
        {
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: build",
            "detail": "tsc",
            "dependsOn": ["clean-dist"]
        },
        {
            "type": "npm",
            "script": "dev",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: dev",
            "detail": "tsc --watch",
            "isBackground": true,
            "dependsOn": ["clean-dist"]
        },
        {
            "label": "clean-dist",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/dist",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        }
    ]
}