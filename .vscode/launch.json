{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CLI",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "program": "${workspaceFolder}/src/cli/cli.ts",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "console": "externalTerminal",
            "env": {
                "NODE_OPTIONS": "--no-warnings"
            }
        }
    ]
}